<%- include('../partials/header'); %>

    <main class="main container">
        <div class="row">
            <h2 class="col-12"><%= name %></h2>
            <section class="section row">
                <figure class="figure col-10">
                    <figcaption><%= data.name %></figcaption>
                    <hr>
                    <ul class="single-item">Genre: <%=data.genre %></ul>
                    <ul class="single-item">Publisher: <%=data.publishers %></ul>
                    <hr>
                    <h4>Release Dates:</h4>
                    <ul class="single-ul">
                        <li class="single-item"><strong>Japan:</strong> <%= data.releaseDates.Japan %></li>
                        <li class="single-item"><strong>North America:</strong> <%= data.releaseDates.NorthAmerica %></li>
                        <li class="single-item"><strong>Europe:</strong> <%= data.releaseDates.Europe %></li>
                        <li class="single-item"><strong>Australia:</strong> <%= data.releaseDates.Australia %></li>
                    </ul>
            </section>
        </div>
    </main>

<%- include('../partials/footer'); %>